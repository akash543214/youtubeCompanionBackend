{
  "compilerOptions": {
    "target": "es2017",                       
    "module": "commonjs",                     
    "rootDir": "src",                          
    "outDir": "dist",                          
    "strict": true,                           
    "noImplicitAny": true,                    
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,  
    "skipLibCheck": true,                      
    "sourceMap": false                         
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "dist"]
}
